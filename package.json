{
  "private": true,
  "name": "wetrial-template",
  "version": "1.0.0",
  "types": "./typings/*.d.ts",
  "typesVersions": {
    ">=3.3": {
      "*": [
        "ts3.3/*"
      ]
    }
  },
  "scripts": {
    "start": "cross-env DEV=1 umi dev",
    "build": "umi build",
    "analyze": "cross-env ANALYZE=1 umi build",
    "test": "umi-test",
    "patch": "yarn version --patch && git push origin master && git push origin --tags",
    "minor": "yarn version --minor && git push origin master && git push origin --tags",
    "major": "yarn version --major && git push origin master && git push origin --tags",
    "new": "node scripts/template",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./",
    "lint:prettier": "check-prettier lint",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier -c --write \"**/*\""
  },
  "dependencies": {
    "antd": "^3.21.4",
    "dva": "^2.4.1",
    "dva-model-extend": "^0.1.2",
    "lodash": "^4.17.11",
    "lodash-decorators": "^6.0.1",
    "memoize-one": "^5.0.4",
    "react": "^16.8.6",
    "react-container-query": "^0.11.0",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.8.6",
    "react-media": "^1.9.2",
    "react-router": "^5.0.1",
    "react-transition-group": "^4.0.0",
    "wetrial": "^1.10.0"
  },
  "devDependencies": {
    "@types/jasmine": "^3.3.12",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.124",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "@types/react-test-renderer": "^16.8.1",
    "@umijs/fabric": "^1.1.9",
    "antd-pro-merge-less": "^1.0.0",
    "antd-theme-webpack-plugin": "^1.2.0",
    "babel-eslint": "^10.0.1",
    "check-prettier": "^1.0.3",
    "classnames": "^2.2.6",
    "cross-env": "^5.2.0",
    "less-vars-to-js": "^1.3.0",
    "mockjs": "^1.0.1-beta3",
    "path": "^0.12.7",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.8.6",
    "roadhog-api-doc": "^1.1.2",
    "typescript": "^3.5.2",
    "umi": "^2.8.18",
    "umi-plugin-react": "^1.9.16",
    "umi-types": "^0.3.17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.less": "stylelint --syntax less",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx}": "npm run lint-staged:js",
    "**/*.{js,ts,tsx}": "npm run lint-staged:js"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
